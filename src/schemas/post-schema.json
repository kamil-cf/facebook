{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "author",
    "body",
    "images"
  ],
  "properties": {
    "author": {
      "$id": "#/properties/author",
      "type": "object",
      "title": "The Author Schema",
      "required": [
        "id",
        "name",
        "avatar_url"
      ],
      "properties": {
        "id": {
          "$id": "#/properties/author/properties/id",
          "type": "string",
          "title": "The Id Schema",
          "default": "",
          "examples": [
            "asdf"
          ],
          "pattern": "^(.*)$"
        },
        "name": {
          "$id": "#/properties/author/properties/name",
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": [
            "asf"
          ],
          "pattern": "^(.*)$"
        },
        "avatar_url": {
          "$id": "#/properties/author/properties/avatar_url",
          "type": "string",
          "title": "The Avatar_url Schema",
          "default": "",
          "examples": [
            "ads"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "body": {
      "$id": "#/properties/body",
      "type": "string",
      "title": "The Body Schema",
      "default": "",
      "examples": [
        "safd"
      ],
      "pattern": "^(.*)$"
    },
    "images": {
      "$id": "#/properties/images",
      "type": "array",
      "title": "The Images Schema",
      "items": {
        "$id": "#/properties/images/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "sadf"
        ],
        "pattern": "^(.*)$"
      }
    }
  }
}